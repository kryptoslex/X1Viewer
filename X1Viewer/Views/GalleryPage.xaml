<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X1Viewer.Views.GalleryPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Close" Clicked="Close_Clicked" />
    </ContentPage.ToolbarItems>
    <Label Text="Put images and videos here with grid" FontSize="Medium" VerticalOptions="Center" HorizontalOptions="Center"/>
    <Grid Padding="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="2" />
            <RowDefinition Height="140" />
            <RowDefinition Height="2" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2" />
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="2" />
        </Grid.ColumnDefinitions>

        <Grid BackgroundColor="Red" x:Name="topBorder" Grid.Row="0"  Grid.Column="0" Grid.ColumnSpan="3" IsVisible="{Binding IsSelected}"/>
        <Grid BackgroundColor="Red" x:Name="bottomBorder" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" IsVisible="{Binding IsSelected}"/>
        <Grid BackgroundColor="Red" x:Name="leftBorder" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" IsVisible="{Binding IsSelected}"/>
        <Grid BackgroundColor="Red" x:Name="rightBorder" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" IsVisible="{Binding IsSelected}"/>

    </Grid>
</ContentPage>
